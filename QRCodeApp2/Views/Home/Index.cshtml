
<h1>QR Decoder</h1>
<div class="row">
    <section>
        <form method="post" enctype="multipart/form-data"
              asp-controller="upload" asp-action="Index">
            <div class="col-md-10">
                <p>Upload QR image:</p>
                <input type="file" name="formFile" required />
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </section>
</div>
